{
  "name": "@openzeppelin/contracts-confidential",
  "description": "",
  "version": "0.1.0",
  "author": "OpenZeppelin Community <maintainers@openzeppelin.org>",
  "license": "MIT",
  "files": [
    "contracts"
  ],
  "scripts": {
    "clean": "hardhat clean && rimraf build contracts/build",
    "compile": "hardhat compile",
    "docs": "npm run prepare-docs && oz-docs",
    "docs:watch": "oz-docs watch contracts docs/templates docs/config.js",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "prettier --loglevel warn '**/*.{js,ts}' --check && eslint .",
    "lint:js:fix": "prettier --loglevel warn '**/*.{js,ts}' --write && eslint . --fix",
    "lint:sol": "prettier --loglevel warn '{contracts,test}/**/*.sol' --check && solhint '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --loglevel warn '{contracts,test}/**/*.sol' --write",
    "prepare": "husky",
    "prepare-docs": "scripts/prepare-docs.sh",
    "test": "hardhat test",
    "test:generation": "scripts/checks/generation.sh",
    "coverage": "hardhat coverage",
    "generate": "scripts/generate/run.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/openzeppelin-confidential-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/OpenZeppelin/openzeppelin-confidential-contracts/issues"
  },
  "dependencies": {
    "openzeppelin-solidity": "file:lib/openzeppelin-contracts",
    "fhevm": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.9.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/docs-utils": "^0.1.5",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.4",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.19.59",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^6.14.3",
    "extra-bigint": "^1.1.18",
    "fhevm-contracts": "^0.2.1",
    "fhevm-core-contracts": "^0.6.1",
    "fhevmjs": "^0.6.1",
    "fs-extra": "^10.1.0",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "hardhat": "^2.24.0",
    "hardhat-deploy": "^0.12.4",
    "hardhat-exposed": "^0.3.19",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.11",
    "hardhat-preprocessor": "^0.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "lodash": "^4.17.21",
    "lodash.startcase": "^4.4.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "rimraf": "^4.1.2",
    "sha3": "^2.1.4",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-comments": "^0.0.2",
    "solidity-coverage": "0.8.12",
    "solidity-docgen": "^0.6.0-beta.36",
    "sqlite3": "^5.1.7",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "web3-validator": "^2.0.6"
  },
  "optionalDependencies": {
    "solidity-comments-linux-x64-gnu": "^0.1.1"
  },
  "overrides": {
    "elliptic": "6.6.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --log-level warn --ignore-path .gitignore --check",
      "eslint"
    ],
    "*.sol": [
      "prettier --log-level warn --ignore-path .gitignore --check",
      "solhint"
    ]
  }
}
